{
  "root": true,
  "extends": ["eslint:recommended", "plugin:node/recommended", "plugin:prettier/recommended"],
  "plugins": ["mocha"],
  "rules": {
    "mocha/no-skipped-tests": "warn",
    "mocha/no-exclusive-tests": "error"
  },
  "env": {
    "node": true,
    "es2022": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2022
  }
}
